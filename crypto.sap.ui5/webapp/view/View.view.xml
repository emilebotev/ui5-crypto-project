<mvc:View
    controllerName="sap.ui5.crypto.controller.View"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:u="sap.ui.unified"
    xmlns:core="sap.ui.core"
    height="100%"
    id="View"
>
    <Page
        id="Mainpage"
        class="sapUiContentPadding sapUiMediumPadding"
        showNavButton="true"
        showHeader="true"
        title="{i18n>appTitle}"
        showSubHeader="true"
        navButtonPress=".handlePageNav"
    >
        <subHeader>
            <Bar id="NavItemsBar">
                <contentLeft>
                    <Button
                        id="NavHome"
                        text="Home"
                    />
                    <Button
                        id="NavNews"
                        text="News"
                    />
                </contentLeft>
                <contentMiddle>
                    <core:Fragment
                        fragmentName="sap.ui5.crypto.fragment.SearchInput"
                        type="XML"
                    />
                </contentMiddle>
                <contentRight>
                    <core:Fragment
                        fragmentName="sap.ui5.crypto.fragment.CurrencyPicker"
                        type="XML"
                    />
                </contentRight>
            </Bar>
        </subHeader>

        <!-- <NavContainer id="NavContainer"> -->
            <Page
                id="TopMarketCapPage"
                class="sapUiContentPadding sapUiMediumPadding"
                showHeader="false"
                showSubHeader="true"
            >
                <content>
                    <core:Fragment
                        fragmentName="sap.ui5.crypto.fragment.Table"
                        type="XML"
                    />
                </content>
                <footer>
                    <OverflowToolbar id="OverFlowToolbarFooterTMC">
                        <Button
                            id="LoadPreviousButton"
                            text="Load Previous page"
                            press=".onLoadPreviousPage"
                        />
                        <Button
                            id="LoadMoreButton"
                            text="Load Next page"
                            press=".onLoadNextPage"
                        />
                    </OverflowToolbar>
                </footer>
            </Page>
            <!-- <mvc:XMLView
                id="CryptoDetailPage"
                viewName="sap.ui5.crypto.view.CryptoDetail"
            />
        </NavContainer> -->
    </Page>
</mvc:View>
