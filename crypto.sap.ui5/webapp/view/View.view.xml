<mvc:View
    controllerName="sap.ui5.crypto.controller.View"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:u="sap.ui.unified"
    xmlns:core="sap.ui.core"
    id="View"
    height="100%"
>
    <Page
        id="MainPage"
        showNavButton="true"
        showHeader="true"
        title="{i18n>appTitle}"
        showSubHeader="true"
        navButtonPress=".handlePageNav"
    >
        <subHeader>
            <Bar id="NavItemsBar">
                <contentLeft>
                    <Button
                        id="NavHome"
                        text="Home"
                        press="handleNav"
                    />
                    <Button
                        id="NavNews"
                        text="News"
                        press="handleNav"
                    />
                </contentLeft>
                <contentMiddle>
                    <core:Fragment
                        id="SearchInputFragment"
                        fragmentName="sap.ui5.crypto.fragment.SearchInput"
                        type="XML"
                    />
                </contentMiddle>
                <contentRight>
                    <core:Fragment
                        id="CurrencyPickerFragment"
                        fragmentName="sap.ui5.crypto.fragment.CurrencyPicker"
                        type="XML"
                    />
                </contentRight>
            </Bar>
        </subHeader>
        <content>
            <NavContainer id="routerTarget" />
        </content>
        <footer>
            <OverflowToolbar id="OverFlowToolbarFooterTMC">
                <Button
                    id="LoadPreviousButton"
                    text="Load Previous page"
                    press=".onLoadPreviousPage"
                />
                <Button
                    id="LoadMoreButton"
                    text="Load Next page"
                    press=".onLoadNextPage"
                />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
